incl bootstrap
incl oslib_bootstrap

func bootstrap() {
	bootstrap_log("building old gitko package");

	// FIXME: Add better build function...
	shell("cd gitko_bootstrap && jinko build.jk && cd ..");

	bootstrap_log("creating local `.jinko` package path");
	shell("mkdir .jinko || true");

	bootstrap_log("starting second stage of bootstrapping");
	shell("jinko build-stage1.jk");
}

bootstrap();
